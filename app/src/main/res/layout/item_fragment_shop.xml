<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
     <ImageView
         android:id="@+id/iv_shop_avatar"
         android:layout_centerVertical="true"
         android:layout_alignParentLeft="true"
         android:layout_width="@dimen/margin120dp"
         android:layout_height="@dimen/margin120dp" />
     <RelativeLayout
         android:layout_toRightOf="@id/iv_shop_avatar"
         android:layout_marginLeft="@dimen/margin18dp"
         android:layout_marginRight="@dimen/btBackWidth"
         android:layout_marginTop="@dimen/margin12dp"
         android:layout_marginBottom="@dimen/margin4dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
          <TextView
              android:id="@+id/tv_shop_name"
              android:textColor="@color/textGreyShopName"
              android:textSize="@dimen/textSize16"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />
          <TextView
              android:id="@+id/tv_shop_status"
              android:textColor="@color/white"
              android:text="正常营业"
              android:gravity="center"
              android:textSize="@dimen/textSize9sp"
              android:padding="@dimen/margin4dp"
              android:background="@mipmap/bg_shop_running"
              android:layout_below="@id/tv_shop_name"
              android:layout_marginTop="@dimen/margin23dp"
              android:layout_marginLeft="@dimen/margin18dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />

          <TextView
              android:id="@+id/tv_open_time"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@+id/tv_shop_status"
              android:layout_marginTop="12dp"
              android:drawableLeft="@drawable/icon_shop_open_time"
              android:drawablePadding="@dimen/marginTop"
              android:gravity="center_vertical"
              android:text="营业时间："
              android:textColor="@color/textColorLightGrey"
              android:textSize="@dimen/textSize9sp" />
          <TextView
              android:id="@+id/tv_shop_address"
              android:layout_marginLeft="@dimen/margin1dp"
              android:gravity="center_vertical"
              android:textColor="@color/textColorLightGrey"
              android:drawableLeft="@drawable/icon_shop_address_small"
              android:drawablePadding="@dimen/marginTop"
              android:text="营业时间："
              android:textSize="@dimen/textSize9sp"
              android:layout_below="@id/tv_open_time"
              android:layout_marginTop="@dimen/margin4dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />
     </RelativeLayout>
</RelativeLayout>